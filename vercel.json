{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.12"
  },
  "commands": {
    "install": "apt-get update && apt-get install -y cmake"
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
